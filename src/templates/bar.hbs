<!DOCTYPE html>
<html>
    <head>
        <title>{{ title }}</title>
        <style>
            html, body {
                width: 100%;
                height: 100%;
                margin: 0;
            }
            canvas {
                margin: 0 auto;
            }
        </style>
    </head>
    <body>
        <canvas id="chart"></canvas>
        <script src="./Chart.min.js"></script>
        <script>
        var ctx = document.getElementById('chart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'scatter',
            data: {
                labels: {{{ labels }}},
                datasets: {{{ datasets }}}
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
        </script>
    </body>
</html>