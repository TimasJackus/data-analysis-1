<!DOCTYPE html>
<html>
    <head>
        <title>{{ title }}</title>
        <style>
            html, body {
                width: 100%;
                height: 100%;
                margin: 0;
            }
            canvas {
                margin: 0 auto;
            }
        </style>
    </head>
    <body>
        <div id="chart"></div>
        <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
        <script>
            var data = [
                {
                    x: {{{ array1 }}},
                    y: {{{ array2 }}},
                    type: 'bar'
                }
            ];

            Plotly.newPlot('chart', data);
        </script>
    </body>
</html>